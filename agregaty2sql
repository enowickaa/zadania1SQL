-- a. Podaj średnią wieku. Podaj zaokrąglony wynik do dwóch miejsc po przecinku.
SELECT ROUND(AVG(age), 2) AS SredniaWieku FROM batman;

-- b. Wyświetl wartość bezwzględną liczby -3.
SELECT ABS(-3) AS WartoscBezwzgledna;

-- c. Wyświetl wynik mnożenia 2 * 3
SELECT 2 * 3 AS WynikMnozenia;

-- d. Wyświetl wynik dzielenia 6 przez 2
SELECT 6 / 2 AS WynikDzielenia;
